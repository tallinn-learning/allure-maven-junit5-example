# This workflow will build a Java project with Maven, and cache/restore any dependencies to improve the workflow execution time
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-java-with-maven

# This workflow uses actions that are not certified by GitHub.
# They are provided by a third-party and are governed by
# separate terms of service, privacy policy, and support
# documentation.

name: Java CI with Maven

on:
  push:
    branches: ['*']
  pull_request:
    branches: ['main']
    
inputs:
  testclass:
    description: 'Name of the test class to run'
    required: true

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Prompt for test class parameter
        id: input
        run: |
          echo "::set-output name=testclass::$(read -p 'Enter test class name: ' inputval; echo $inputval)"

      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: '11'
          distribution: 'adopt'
         

      - name: Build with Maven
        run: mvn clean install

      - name: Run tests
        run: mvn test -Dtest=${{ steps.input.outputs.testclass }}
